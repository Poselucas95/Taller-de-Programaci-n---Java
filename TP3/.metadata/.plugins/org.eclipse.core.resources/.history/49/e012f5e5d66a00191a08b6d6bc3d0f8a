package ar.edu.ort.tp3.ej1;

public class NumeroTelefonico {
	private String caracteristica;
	private String nroDeAbonado;
	private String codigoPais;
	private TipoDeLinea tipo;
	
	public NumeroTelefonico(String caracteristica, String nroDeAbonado, String codigoPais, TipoDeLinea tipo){
		this.caracteristica = caracteristica;
		this.nroDeAbonado = nroDeAbonado;
		this.codigoPais = codigoPais;
		this.tipo = tipo;
	}
	
	public String getValor(){ 
		return "(+"+codigoPais+") "+caracteristica+"-"+nroDeAbonado;
	}
	
	

	public String getCaracteristica() {
		return caracteristica;
	}

	public void setCaracteristica(String caracteristica) {
		this.caracteristica = caracteristica;
	}

	public String getNroDeAbonado() {
		return nroDeAbonado;
	}

	public void setNroDeAbonado(String nroDeAbonado) {
		this.nroDeAbonado = nroDeAbonado;
	}

	public String getCodigoPais() {
		return codigoPais;
	}

	public void setCodigoPais(String codigoPais) {
		this.codigoPais = codigoPais;
	}

	public TipoDeLinea getTipo() {
		return tipo;
	}

	public void setTipo(TipoDeLinea tipo) {
		this.tipo = tipo;
	}
	
	
	
}
